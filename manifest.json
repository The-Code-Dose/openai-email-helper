{
  "manifest_version": 3,
  "name": "OpenAI Email Helper",
  "version": "1.0",
  "description": "A Chrome extension that helps you draft emails using OpenAI API",
  "action": {
    "default_title": "OpenAI Email Draft",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ]
}
